FROM python:3.11.0-slim-buster

ARG IMAGE_NAME
ENV IMAGE_NAME "${IMAGE_NAME}"
ARG IMAGE_TAG
ENV IMAGE_TAG "${IMAGE_TAG}"

ARG DNASTACK_CLIENT_LIBRARY_VERSION
ENV DNASTACK_CLIENT_LIBRARY_VERSION "${DNASTACK_CLIENT_LIBRARY_VERSION}"

RUN python3 -m pip install dnastack-client-library==${DNASTACK_CLIENT_LIBRARY_VERSION}
